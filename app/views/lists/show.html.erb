<div class="container">

  <p style="color: green"><%= notice %></p>

  <%= render @list %>

  <br>
  <div>
    <%= link_to "Add movie to list", new_bookmark_path(@list), class: "btn btn-primary" %>
  </div>
  <hr>
  <div>
    <%= link_to "Edit this list", edit_list_path(@list), class: "btn btn-primary" %>
    <br>
    <br>
    <%= button_to "Delete this list", @list, method: :delete, class: "btn btn-primary" %>
    <hr>
    <%= link_to "Back to lists", lists_path, class: "btn btn-primary" %>
  </div>


</div>
